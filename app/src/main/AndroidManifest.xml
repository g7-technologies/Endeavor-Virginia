<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g7tech.endeavorvirginia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Helper_Classes.AppController"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.RentalHistoryActivity"></activity>
        <activity android:name=".Activities.UtilityBillsActivity" />
        <activity android:name=".Activities.CompletedRequestActivity" />
        <activity android:name=".Activities.DeclinedRequestActivity" />
        <activity android:name=".Activities.ApprovedRequestActivity" />
        <activity android:name=".Activities.PendingRequestActivity" />
        <activity android:name=".Activities.RequestStatusActivity" />
        <activity android:name=".Activities.MaintenanceRequestActivity" />
        <activity android:name=".Activities.ReportProblemActivity" />
        <activity android:name=".Activities.ReportHistoryActivity" />
        <activity android:name=".Activities.HomeActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>